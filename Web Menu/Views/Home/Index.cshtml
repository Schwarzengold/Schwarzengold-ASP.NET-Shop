@{
    ViewData["Title"] = "Game Introduction";
    ViewData["BodyClass"] = "index-page index-background";
}

<link rel="stylesheet" href="~/css/custom.css" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Cinzel+Decorative&display=swap">

<div class="hdr">
    <h1 class="text-center mb-5">Game Universes Shop</h1>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="text-center mb-5">
        <a href="@Url.Action("Create", "Home")" class="btn createbtn3">Add New Game</a>
    </div>
}

<div class="container mt-5">
    <div class="row">
        @foreach (var game in Model)

        {
            <div class="col-md-6 mb-4">
                <div class="card game-card bg-dark">
                    <img src="@(string.IsNullOrEmpty(game.CardImageUrl) ? "~/images/default-card.jpg" : game.CardImageUrl)" class="card-img-top card-fixed-image" alt="@game.Title">
                    <div class="card-body">
                        <h5 class="card-title text-center">@game.Title</h5>
                        <p class="price-text card-text font-weight-normal">$@game.Price</p>
                        <div class="d-flex justify-content-between group1 mt-3">
                            <a href="@Url.Action("GameDetails", "Home", new { id = game.Id })" class="button5">Explore</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a href="@Url.Action("Edit", "Home", new { id = game.Id })" class="button5">Edit</a>
                                <form asp-action="Delete" asp-controller="Home" method="post" onsubmit="return confirm('Are you sure you want to delete this game?');">
                                    <input type="hidden" name="id" value="@game.Id" />
                                    <button type="submit" class="button5">Delete</button>
                                </form>
                            }
                            else if (User.IsInRole("Buyer"))
                            {
                                <form asp-action="AddToCart" asp-controller="Cart" method="post">
                                    <input type="hidden" name="id" value="@game.Id" />
                                    <button type="submit" class="button5">Add to Cart</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>