@{
    ViewData["Title"] = "Game Introduction";
    ViewData["BodyClass"] = "index-page index-background";
}

<link rel="stylesheet" href="~/css/cust om.css" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Cinzel+Decorative&display=swap">

<div class="hdr">
    <h1 class="text-center mb-5">Game Universes</h1>
</div>

<div class="text-center mb-5 ">
    <a href="@Url.Action("Create", "Home")" class="btn createbtn">Add New Game</a>
</div>

<div class="container mt-5">
    <div class="row">
        @foreach (var game in Model)

        {
            <div class="col-md-6 mb-4">
                <div class="card game-card bg-dark">
                    <img src="@(string.IsNullOrEmpty(game.CardImageUrl) ? "~/images/default-card.jpg" : game.CardImageUrl)" class="card-img-top card-fixed-image" alt="@game.Title">
                    <div class="card-body">
                        <h5 class="card-title text-center">@game.Title</h5>
                        <p class="card-text price-text">$@game.Price</p>
                        <div class="d-flex justify-content-between group1 mt-3">
                            <a href="@Url.Action("GameDetails", "Home", new { id = game.Id })" class="btn button5">Explore</a>
                            <a href="@Url.Action("Edit", "Home", new { id = game.Id })" class="btn button5">Edit</a>
                            <form asp-action="Delete" asp-controller="Home" method="post" onsubmit="return confirm('Are you sure you want to delete this game?');">
                                <input type="hidden" name="id" value="@game.Id" />
                                <button type="submit" class="btn button1">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>